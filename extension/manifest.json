{
  "manifest_version": 3,
  "name": "Open in Safari (Mac via Parallels)",
  "version": "1.2.0",
  "description": "Opens the current Edge page in Safari on your Mac when running Windows in Parallels.",
  "permissions": [
    "tabs",
    "storage",
    "contextMenus",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Open in Safari (Mac)",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "commands": {
    "open-in-safari": {
      "suggested_key": {
        "default": "Alt+Shift+S"
      },
      "description": "Open current tab in Safari on Mac"
    }
  }
}